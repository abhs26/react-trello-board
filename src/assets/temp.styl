.desk, .desk-placeholder, .desk-placeholder:hover
	width 200px
	display inline-block
	height 100%
	overflow hidden
	min-height 100px
	background-color #e2e4e6
	box-shadow 1px 1px 1px rgba(0,0,0,.5)
	border-radius 3px
	padding-bottom 20px
	margin-right 20px
	vertical-align top
	.desk-head
		position relative
		padding 5px 8px
		margin-bottom 10px
		clearfix()
