			font-weight bold
			white-space normal
			width 100%
.desk-items
	overflow-y auto
	height 100%
	padding-bottom 20px
	.placeholder, .placeholder:hover
		height 161px
		background-color rgba(208,208,208,1)
.item
	width 90%
	margin 0 auto 10px
	background #fff
	min-height 100px
	border-radius 5px
	box-shadow 1px 1px 1px rgba(0,0,0,.3)
	transition 0.15s
	cursor pointer
	&:hover
		background #f7f7f7
	.item-name
		padding 5px 10px
		border-bottom 1px solid #dbdbdb
		white-space normal
		word-break break-all
		word-wrap break-world
	.item-container
		padding 10px
		border-bottom 1px solid #dbdbdb
		clearfix()
		.item-avatar-wrap
			width 70px
			float left
			margin-bottom 5px
